{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "hollow",
	"version": "0.0.4",
	"identifier": "com.hollow.desktop",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "hollow",
				"decorations": false,
				"maximized": true,
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": "default-src 'self' ipc:; img-src 'self' asset: asset://*",
			"assetProtocol": {
				"enable": true,
				"scope": []
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "appimage",
		"createUpdaterArtifacts": true,
		"licenseFile": "wix\\license.rtf",
		"linux": {
			"appimage": {
				"bundleMediaFramework": true
			},
			"deb": {
				"files": {}
			},
			"rpm": {
				"files": {},
				"epoch": 0,
				"release": "1"
			}
		},
		"windows": {
			"webviewInstallMode": {
				"type": "embedBootstrapper"
			},
			"wix": {
				"bannerPath": "wix\\installerBanner.bmp",
				"dialogImagePath": "wix\\installerDialogImage.bmp",
				"version": "0.1.0"
			}
		},
		"macOS": {
			"files": {}
		},
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["hollow"]
			}
		},
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMyM0E4REJEREQ2NUY1MkMKUldRczlXWGR2WTA2d2tyakNPbGN4SVM2aU1lNC9peExBWTZUVkpVSFVudGprMkE3VHZZMlpzNlcK",
			"endpoints": [
				"https://github.com/hollow-app/hollow/releases/latest/download/latest.json"
			]
		}
	}
}
