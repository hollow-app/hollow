{
        "$schema": "https://schema.tauri.app/config/2",
        "productName": "hollow",
        "version": "0.0.4",
        "identifier": "com.hollow.desktop",
        "build": {
                "beforeDevCommand": "npm run dev",
                "devUrl": "http://localhost:1420",
                "beforeBuildCommand": "npm run build",
                "frontendDist": "../dist"
        },
        "app": {
                "windows": [
                        {
                                "title": "hollow",
                                "decorations": false,
                                "maximized": true,
                                "width": 800,
                                "height": 600
                        }
                ],
                "security": {
  			"csp": "default-src 'self' ipc:; img-src 'self' asset: asset://*",
  			"assetProtocol": {
				"enable": true,
				"scope": ["$APPDATA/vault/**"]
			}
                }
        },
        "bundle": {
                "active": true,
                "targets": "deb",
                "licenseFile": "wix\\license.rtf",
                "linux": {
                        "appimage": {
                                "bundleMediaFramework": true
                        },
                        "deb": {
                                "files": {}
                        },
                        "rpm": {
                                "files": {},
                                "epoch": 0,
                                "release": "1"
                        }
                },
                "windows": {
                        "webviewInstallMode": {
                                "type": "embedBootstrapper"
                        },
                        "wix": {
                                "bannerPath": "wix\\installerBanner.bmp",
                                "dialogImagePath": "wix\\installerDialogImage.bmp",
                                "version": "0.1.0"
                        }
                },
		"macOS": {
                        "files": {}
                },
                "icon": [
                        "icons/32x32.png",
                        "icons/128x128.png",
                        "icons/128x128@2x.png",
                        "icons/icon.icns",
                        "icons/icon.ico"
                ]
        }
}
