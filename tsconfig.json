{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "baseUrl": "./src/App",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@coretools/*": [
        "(Core Tools)/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@managers/*": [
        "managers/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@type/*": [
        "type/*"
      ],
      "@store": [
        "../shared/store"
      ],
      "@context/*": [
        "context/*"
      ],
      "@rust": [
        "../lib/rust"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
